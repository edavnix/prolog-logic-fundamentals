# Editorconfig for prolog-logic-fundamentals
# Documentation: https://editorconfig.org

root = true

# Universal rules for all files
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Prolog
[*.pl]
max_line_length = 80

# Justfile
[Justfile]
max_line_length = 80

# Markdown
[*.md]
max_line_length = off
trim_trailing_whitespace = false
